<?xml version="1.0"?>
<extension key="mailutils" type="module">
  <file>mailutils</file>
  <name>Mail Utilities</name>
  <description>The CiviCRM Mail Utilities extension adds advanced email features like reply support and threading.</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>Patrick Figel</author>
    <email>pfigel@greenpeace.org</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://github.com/greenpeace-cee/mailutils</url>
    <url desc="Documentation">https://github.com/greenpeace-cee/mailutils</url>
    <url desc="Support">https://github.com/greenpeace-cee/mailutils/issues</url>
    <url desc="Licensing">https://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2025-07-29</releaseDate>
  <version>1.4.0-alpha.1</version>
  <develStage>alpha</develStage>
  <requires>
    <ext>at.greenpeace.casetools</ext>
  </requires>
  <compatibility>
    <ver>5.69</ver>
  </compatibility>
  <comments/>
  <classloader>
    <psr4 prefix="Civi\" path="Civi"/>
    <psr0 prefix="CRM_" path="."/>
  </classloader>
  <civix>
    <namespace>CRM/Mailutils</namespace>
    <format>23.02.1</format>
  </civix>
  <mixins>
    <mixin>menu-xml@1.0.0</mixin>
    <mixin>mgd-php@1.0.0</mixin>
    <mixin>setting-php@1.0.0</mixin>
    <mixin>smarty-v2@1.0.1</mixin>
    <mixin>entity-types-php@1.0.0</mixin>
  </mixins>
  <upgrader>CRM_Mailutils_Upgrader</upgrader>
</extension>
